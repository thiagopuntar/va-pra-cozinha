{
  "extends": [
    "next",
    "airbnb",
    "airbnb-typescript",
    "next/core-web-vitals",
    "prettier"
  ],
  "plugins": ["prettier"],
  "parserOptions": {
    "project": "./tsconfig.json"
  },
  "rules": {
    "react/jsx-props-no-spreading": "off",
    "react/function-component-definition": "off",
    "import/no-extraneous-dependencies": [
      "error",
      { "devDependencies": ["**/stories.tsx", "**/*.spec.ts"] }
    ]
  }
}
